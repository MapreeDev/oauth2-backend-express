{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDirs": ["src","dist"],
        "baseUrl": ".",
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleDetection": "auto",
        "moduleResolution": "node",
        "removeComments": true,
        "noImplicitOverride": true,
        "paths": {
            "#/*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}